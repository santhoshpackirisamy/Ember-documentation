<h1>{{this.model.title}}</h1>
<h2>by {{this.model.author}}</h2>

<div class='intro'>
  {{this.model.intro}}
</div>
<hr>

{{#if this.isExpanded}}
  <button {{action "toggleBody"}}>Hide Body</button>
  <div class="body">
    {{this.model.body}}
  </div>
{{else}}
  <button {{action "toggleBody"}}>Show Body</button>
{{/if}}